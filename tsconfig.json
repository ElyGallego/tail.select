{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": false,
        "baseUrl": ".",
        "lib": ["DOM", "ES5", "ES6"],
        "locale": "en",
        "newLine": "lf",
        "paths": {
            "rat.select": ["src/ts/index"]
        },
        "removeComments": true,
        "sourceMap": true,
        "target": "ES5",
        "typeRoots": [
            "./src/ts/types",
            "./src/ts/plugins/types"
        ]
    },
    "exclude": [
        "./rollup.config.js",
        "./dist/*",
        "./src/build/*"
    ]
}